<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Guitar_app" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/orange_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#645139</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorPrimary">@color/black</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/sf_pro_regular</item>
    </style>

    <style name="Background">
        <item name="android:background">@drawable/gradient_background_light</item>
    </style>

    <style name="Field">
        <item name="android:background">@color/fields_light</item>
        <item name="android:backgroundTint">@color/fields_light</item>
        <item name="color">@color/fields_light</item>
        <item name="colorAccent">@color/fields_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="TextSize">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button">
        <item name="android:background">@drawable/rectangle_background</item>
        <item name="android:backgroundTint">@color/buttons_light</item>
        <item name="color">@color/buttons_light</item>
        <item name="android:colorAccent">@color/buttons_light</item>
        <item name="colorPrimary">@color/buttons_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ReverseField">
        <item name="android:background">@color/fields_dark</item>
        <item name="android:backgroundTint">@color/fields_dark</item>
        <item name="color">@color/fields_dark</item>
    </style>

    <style name="ColorText">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ItemCardView">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">6px</item>
        <item name="cardCornerRadius">10dp</item>
    </style>

    <style name="MenuItem">
        <item name="android:background">@color/menu_light</item>
        <item name="android:backgroundTint">@color/menu_light</item>
        <item name="color">@color/menu_light</item>
        <item name="colorAccent">@color/menu_light</item>
        <item name="android:textColor">@color/black</item>
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.Active</item>
        <item name="itemTextAppearance">@style/BottomNavigationView</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TitleText">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="RecyclerView">
        <item name="android:layout_marginBottom">55dp</item>
        <item name="android:layout_marginTop">50dp</item>
    </style>

    <style name="Arrow">
        <item name="android:backgroundTint">@color/black</item>
    </style>


</resources>